.col-sm-6
  .panel.panel-default
    .panel-heading
      %strong
        = comment.user.name
      %span.text-muted
        = time_ago_in_words(comment.created_at)
        ago
      = link_to 'Delete', movie_comment_path(@movie, comment), method: :delete, data: { confirm: 'Are you sure?' } if comment.user == current_user
    .panel-body
      = comment.body
